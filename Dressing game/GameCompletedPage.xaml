<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dressing_game.GameCompletedPage"
             Title="Game Completed"
             BackgroundColor="#FDF0F5" >
    <Grid>
              

        <Image Source="game_completed.jpg"
               Grid.Row="0"
               Grid.Column="0"
               Grid.ColumnSpan="2"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               WidthRequest="800"
               HeightRequest="700" />

        <Button Text="Go To Main Page"
                BackgroundColor="MediumVioletRed"
                TextColor="White"
                FontSize="18"
                Grid.Row="3" 
                Grid.Column="1"
                Grid.ColumnSpan="2"
                WidthRequest="200"
                HeightRequest="50"
                CornerRadius="25"
                HorizontalOptions="Center"
                Clicked="OnPlayAgainClicked" />
    </Grid>
</ContentPage>